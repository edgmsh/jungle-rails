<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th >Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% line_items(@order.id).each do |item| %>
        <tr>
        <td><%=product_name(item.product_id)%></td>
        <td><%=humanized_money_with_symbol item.item_price_cents / 100.0%> </td>
        <td><%=item.quantity %></td>
        <td><%=humanized_money_with_symbol item.total_price_cents / 100.0%> </td>
       </tr> 
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol total_line_items(@order.id) / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>  
  <div class="order-summary jumbotron">
    <h4>Confirmation sent to <%=order_email(@order.id)%>. Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
